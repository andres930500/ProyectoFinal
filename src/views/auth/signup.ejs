<%- include('../layouts/header', {title: 'Sign Up'}); -%>

<div class="container   ">
    <div class="row justify-content-center mt-5 ">
        <div class="col-md-6">
            <div class="card ">
                <div class="card-body ">
                    <h1 class="card-title alert alert-primary text-center">Registro</h1>
                    <form action="/auth/signup" method="post">
                        <div class="mb-3">
                            <label for="username" class="form-label">Username</label>
                            <input type="text" name="username" id="username" class="form-control" placeholder="Ingrese username" required>
                        </div>
                        <div class="mb-3">
                            <label for="email" class="form-label">Email</label>
                            <input type="text" name="email" id="email" class="form-control" placeholder="Ingrese email" required>
                        </div>
                        <div class="mb-3">
                            <label for="password" class="form-label">Password</label>
                            <input type="password" name="password" id="password" class="form-control" placeholder="Ingrese password" required>
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-outline-primary">Crear</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../layouts/footer'); -%>
