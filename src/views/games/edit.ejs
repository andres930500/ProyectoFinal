<%- include('../layouts/header', { title: 'Editar Juego' }); -%>
<div class="container">
    <div class="row">
        <div class="col-12">
            <h1 class="alert alert-success text-center">Editar Juego</h1>
        </div>
    </div>
    <div class="row">
        <form action="/games/edit/<%= game.id %>" method="post" class="row">
            <div class="col-6">
                <label for="title" class="form-label">Título</label>
                <input type="text" name="title" id="title" class="form-control" value="<%= game.title %>" required>
            </div>
            <div class="col-6">
                <label for="genre" class="form-label">Género</label>
                <input type="text" name="genre" id="genre" class="form-control" value="<%= game.genre %>" required>
            </div>
            <div class="col-6">
                <label for="compatiblePlatform" class="form-label">Plataforma Compatible</label>
                <input type="text" name="compatiblePlatform" id="compatiblePlatform" class="form-control" value="<%= game.compatiblePlatform %>" required>
            </div>
            <div class="col-6">
                <label for="gameModes" class="form-label">Modos de Juego</label>
                <input type="text" name="gameModes" id="gameModes" class="form-control" value="<%= game.gameModes %>" required>
            </div>
            <div class="col-6">
                <label for="price" class="form-label">Precio</label>
                <input type="number" name="price" id="price" class="form-control" value="<%= game.price %>" required>
            </div>
            <div class="col-6">
                <label for="coverImageUrl" class="form-label">URL de la Carátula</label>
                <input type="text" name="coverImageUrl" id="coverImageUrl" class="form-control" value="<%= game.coverImageUrl %>" required>
            </div>
            <div class="col-6">
                <label for="language" class="form-label">Lenguaje</label>
                <input type="text" name="language" id="language" class="form-control" value="<%= game.language %>" required>
            </div>
            
            
            <!-- Agrega aquí otros campos del formulario si es necesario -->
            <div class="col-12 d-grid mt-4">
                <button type="submit" class="btn btn-success">Guardar Cambios</button>
            </div>
        </form>
    </div>
</div>
<%- include('../layouts/footer'); -%>
