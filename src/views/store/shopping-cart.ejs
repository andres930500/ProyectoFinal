<%- include('../layouts/header', { title: 'Carrito de Compras' }); -%>

<div class="container mt-5">
  <div class="row">
    <div class="col-12">
      <h1 class="alert alert-primary text-center">Carrito de Compras</h1>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Formulario de Pedido</h5>

          <form
            action="/store/place-order"
            method="post"
            onsubmit="return confirm('¿Estás seguro de realizar este pedido?')"
          > 
            <div class="mb-3">
              <label for="document" class="form-label">Documento</label>
              <input
                type="text"
                name="document"
                id="document"
                class="form-control"
                required
              />
            </div>
            <div class="mb-3">
              <label for="name" class="form-label">Nombre</label>
              <input
                type="text"
                name="name"
                id="name"
                class="form-control"
                required
              />
            </div>
            <div class="mb-3">
              <label for="lastName" class="form-label">Apellidos</label>
              <input
                type="text"
                name="lastName"
                id="lastName"
                class="form-control"
                required
              />
            </div>
            <div class="mb-3">
              <label for="address" class="form-label">Dirección</label>
              <input
                type="text"
                name="address"
                id="address"
                class="form-control"
                required
              />
            </div>
            <div class="mb-3">
              <label for="phone" class="form-label">Teléfono</label>
              <input
                type="text"
                name="phone"
                id="phone"
                class="form-control"
                required
              />
            </div>
            <div class="mb-3 text-center ">
              <button type="submit" class="btn btn-primary">
                Realizar Pedido
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>

    <div class="col-md-6">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Productos Seleccionados</h5>
          <ul class="list-group">
            <% let total = 0; %> <% selectedProducts.forEach(product => { %>
            <li
              class="list-group-item d-flex justify-content-between align-items-center"
            >
              <%= product.title %>
              <span class="badge bg-primary rounded-pill"
                >Precio: $<%= product.price.toFixed(2) %></span
              >
            </li>
            <% total += product.price; %> <% }); %>
          </ul>
          <!-- Mostrar el total de la compra -->
          <div class="mt-3">
            <h5>Total: $<%= total.toFixed(2) %></h5>
          </div>
        </div>
      </div>
    </div>

    >
  </div>
</div>

<style>
  body {
    background-color: #ffffff; /* Fondo azul para toda la página */
    color: #fff; /* Texto blanco para contrastar */
  }

  .container {
    background-color: #fafafa; /* Fondo azul más oscuro para el contenedor principal */
    padding: 20px; /* Agrega un relleno al contenedor principal */
    border-radius: 10px; /* Añade esquinas redondeadas al contenedor */
  }

  .card {
    background-color: #ffffff; /* Fondo azul para las tarjetas */
    color: #fff; /* Texto blanco para contrastar en las tarjetas */
    border: none; /* Elimina los bordes de las tarjetas */
  }

  .card-body {
    background-color: #0056b3; /* Fondo azul más oscuro para el cuerpo de la tarjeta */
    border-radius: 10px; /* Añade esquinas redondeadas al cuerpo de la tarjeta */
  }

  .btn-success {
    background-color:#0056b3; /* Fondo verde para los botones de éxito */
    border-color:#85baf3; /* Color del borde para los botones de éxito */
  }
</style>

<div class="container mt-5">
  <!-- Contenido del carrito de compras y formulario de pedido... -->
</div>

<%- include('../layouts/footer'); -%>
